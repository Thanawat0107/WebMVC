@model IEnumerable<Product>

<a class="btn btn-primary" asp-action="Create">Create</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(p => p.Id)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Name)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Price)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Amount)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Image)</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Amount</td>
                <td>
                    <img src="@product.Image" height="50" class="rounded-3" alt="...">
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <a class="btn btn-dark" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('คุณต้องการหรือไหม')">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>