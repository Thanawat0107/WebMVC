@model List<Product>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@product.id</th>
                <th colspan="2">@product.name</th>
                <td>@product.price</td>
                <td>@product.amout</td>
            </tr>
        }
    </tbody>
</table>
